{
  "ConnectionStrings": {
    "WhatTheDob": "Data Source=WhatTheDob.db"
  },
  "DataStorage": {
    "Path": "datastorage"
  },
  "SessionCookie": {
    "CookieKey": "UserSessionId",
    "DaysToExpire": 7
  },
  "MenuFetch": {
    "InitialFetch": true,
    "SelectedCampus": 46,
    "Meals": [
      "Breakfast",
      "Lunch",
      "Dinner"
    ],
    "DaysToFetch": 7,
    "MenuApiUrl": "https://www.absecom.psu.edu/menus/user-pages/daily-menu.cfm"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.EntityFrameworkCore": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/whatthedobweb-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7,
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [ "FromLogContext" ]
  },
  "AllowedHosts": "*"
}
